# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Connection String
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA&connection_limit=LIMIT
DATABASE_URL="postgresql://companyos:companyos_dev_password@localhost:5432/companyos_dev?schema=public"

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis Host
REDIS_HOST=localhost

# Redis Port
REDIS_PORT=6379

# Redis Password (leave empty for no password)
REDIS_PASSWORD=

# Redis Database Number (0-15)
REDIS_DB=0

# Enable TLS for Redis connection (true/false)
REDIS_TLS=false

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Node Environment (development, production, test)
NODE_ENV=development

# API Server Port
PORT=3001

# API Base URL
API_URL=http://localhost:3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Expiration (e.g., 1d, 7d, 30d)
JWT_EXPIRATION=7d

# Session Secret
SESSION_SECRET=your-session-secret-change-this-in-production

# ============================================================================
# THIRD-PARTY INTEGRATIONS
# ============================================================================

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback

# Vercel API
VERCEL_ACCESS_TOKEN=your-vercel-access-token
VERCEL_TEAM_ID=your-vercel-team-id

# Figma API
FIGMA_ACCESS_TOKEN=your-figma-access-token

# Slack App
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Twitter/X API
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# LinkedIn API
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ============================================================================
# AI/ML SERVICES
# ============================================================================

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORGANIZATION=org-your-openai-org-id

# Anthropic API (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Pinecone (Vector Database)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX=companyos-embeddings

# ============================================================================
# OBSERVABILITY & MONITORING
# ============================================================================

# Sentry DSN (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Datadog API Key
DATADOG_API_KEY=your-datadog-api-key

# ============================================================================
# CLOUD STORAGE
# ============================================================================

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=companyos-uploads

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

# Enable Prisma Studio on startup (true/false)
PRISMA_STUDIO_ENABLED=false

# Enable API request logging (true/false)
API_LOGGING_ENABLED=true

# Enable Redis debug logging (true/false)
REDIS_DEBUG=false

# Enable verbose logging (true/false)
VERBOSE_LOGGING=false
