# GitHub Integration Configuration

# GitHub OAuth App Credentials
# Create at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=https://app.companyos.com/api/integrations/github/callback

# GitHub Webhook Configuration
GITHUB_WEBHOOK_SECRET=your_webhook_secret_key
GITHUB_WEBHOOK_URL=https://app.companyos.com/api/webhooks/github/receive

# Encryption Key (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your_64_character_hex_encryption_key

# Application Configuration
NODE_ENV=development
PORT=3000

# Database (example - adjust based on your database choice)
DATABASE_URL=postgresql://user:password@localhost:5432/companyos

# Session Configuration
SESSION_SECRET=your_session_secret_key

# API Base URL
API_BASE_URL=https://app.companyos.com

# Agent Configuration
AGENT_SPAWN_ENABLED=true

# Logging
LOG_LEVEL=info
